
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String 
  email String @unique
  password String
  createdAt DateTime @default(now())
  role Role
  customers Customer[]

}

model Customer {
  id String @id @default(uuid())
  name String
  email String 
  phone String
  createdAt DateTime @default(now())
  transactions Transaction[]
  userId String
  user User @relation(fields: [userId], references: [id])
  @@unique([email, userId])
 
}

model Transaction {
  id String @id @default(uuid())
  amount Float 
  date DateTime @default(now())
  status String
  type String
  customerId String
  customer Customer @relation(fields: [customerId], references: [id])
}

enum Role {
  ADMIN
  USER
}

